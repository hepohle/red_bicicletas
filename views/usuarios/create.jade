extends ../layout

    block content
        a(href= '/usuarios') Volver

        br
        br
        br

        h1 Nuevo usuario

        br
        br

        form(action='/usuarios/create' method='post')
            .form-group
                label(for='nombre') Nombre:
                input#nombre.form-control(type= 'text' name= 'nombre' value= usuario.nombre class= errors.nombre ? 'is-invalid': '')
                if errors.nombre
                    small#nombreHelp.text-danger
                        = errors.nombre.message
            .form-group
                label(for="email") Email:
                input#email.formcontrol(type= 'text' name= 'email' value= usuario.email clas= errors.email ? 'is-invalid': '')
                if errors.email
                    small#emailHelp.text-danger
                        = errors.email.message
            .form-group
                label(for="pwd") Password:
                input#pwd.formcontrol(type= 'password' name= 'password' value= usuario.password clas= errors.password ? 'is-invalid': '')
                if errors.password
                    small#passwordHelp.text-danger
                        = errors.password.message
            .form-group
                label(for="confirm_pwd") Confirmar Password:
                input#confirm_pwd.formcontrol(type= 'password' name= 'confirm_password' value= usuario.confirm_password clas= errors.confirm_password ? 'is-invalid': '')
                if errors.confirm_password
                    small#confirm_passwordHelp.text-danger
                        = errors.confirm_password.message
            br
            br
            input.btn.btn-primary(type="submit" value= 'OK')